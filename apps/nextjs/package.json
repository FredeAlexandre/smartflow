    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@smartflow/eslint-config": "workspace:*",
    "@smartflow/prettier-config": "workspace:*",
    "@smartflow/tailwind-config": "workspace:*",
    "@smartflow/tsconfig": "workspace:*",
    "dotenv-cli": "^7.4.2",
    "jiti": "^1.21.0",
    "typescript": "^5.4.5",
    "@types/node": "^20.14.9",
    "@types/react": "^18",
    "@types/react-dom": "^18"
  },
  "prettier": "@smartflow/prettier-config"
