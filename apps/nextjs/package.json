{
  "name": "@smartflow/nextjs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "bun with-env next build",
    "clean": "rm -rf .next node_modules next-env.d.ts",
    "dev": "bun with-env next dev",
    "format": "bun run --bun prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
